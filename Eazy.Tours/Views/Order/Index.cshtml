<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Orders</h2>
        </div>
        <div class="col-6">
            <a asp-controller="order" asp-action="Index" asp-route-status="Pending">
                Pending
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="Approved">
                Approved
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="InProcess">
                In process
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="Booked">
                Booked
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="All">
                All
            </a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Phone number
            </th>
            <th>
                Booking status
            </th>
            <th>
                Booking total
            </th>
        </tr>
    </thead>
</table>

@section scripts{
    <script src="~/js/Order.js"></script>
}