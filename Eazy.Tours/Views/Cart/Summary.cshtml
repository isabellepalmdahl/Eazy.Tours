@model Eazy.Tours.Models.ViewModels.CartVM

<form method = "post">
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Booking Details</h5>
                </div>
                <div class="card-body">
                    <!-- 2 column grid layout with text inputs for the first and last names-->
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" asp-for="@Model.OrderHeader.FirstName" class="form-control"/>
                                <label class="form-label" for="form7Example1">First name</label>
                                <input type="text" asp-for="@Model.OrderHeader.LastName" class="form-control"/>
                                <label class="form-label" for="form7Example1">Last name</label>
                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" asp-for="@Model.OrderHeader.Email" class="form-control"/>
                            <label class="form-label" for="form7Example1">Email</label>
                        </div>
                            <div class="form-outline mb-4">
                            <input type="text" asp-for="@Model.OrderHeader.PhoneNumber" class="form-control"/>
                            <label class="form-label" for="form7Example1">Phone</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var details in @Model.ListOfCart)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    <span>@details.Product.Name</span>
                                    <span>QTY: @details.Count</span>
                                    <span>@(((details.Product.Price)*(details.Count)).ToString("c"))</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Total amount</strong>
                                    <strong>
                                        <p class="mb-0">(including VAT)</p>
                                    </strong>
                                </div>
                                <span><strong>@Model.OrderHeader.OrderTotal.ToString("c")</strong></span>
                            </li>
                        </ul>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                            Make booking
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


