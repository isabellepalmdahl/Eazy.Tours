@model IEnumerable<Eazy.Tours.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<h2 class="text-primary">Products</h2>
<form asp-action="Index" method="get" class="d-flex">
<input class="form-control me-sm-2" type="text" placeholder="Search" name="SearchString" value="@ViewData["CurrentFilter"]">
<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
</form>

<div class="row pb-4">
    @foreach (var item in @Model)
    {
        <div class="card" style="width: 14rem;">
            <img class="card-img-top" src="@item.ImageUrl" alt="Card image @item.Name">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Price: € @item.Price.ToString("0.00")</p>
                <a asp-action="Details" asp-controller="Home" asp-route-productId="@item.Id" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>
