@using Eazy.Tours.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContext;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourCompany</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Minty.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.0/css/jquery.dataTables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/mobiscroll.jquery.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/icons_mobiscroll.ttf" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/icons_mobiscroll.woff" rel="stylesheet" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" alt="logo" src="~/Images/logo_icon_170795.png"/>YourCompany</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            if(User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Excursions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">Bookings</a>
                                </li>
                            }
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">@await Component.InvokeAsync("Cart")</a>
                                </li>
                        }
                    </ul>

                </div>
                <partial name="_LoginPartial"/>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="site-footer">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-3 mb-5">
                    <h4>
                        Contact &amp; Address
                    </h4>
                    <ul class="list-unstyled footer-link">
                        <li class="d-flex">
                            <span class="me-3">Address:</span><span class="text-white">Camino Achacay 7, El Escobonal, Santa Cruz de Tenerife</span>
                        </li>
                        <li class="d-flex">
                            <span class="me-3">Phone number:</span><span class="text-white">642 800 137</span>
                        </li>
                        <li class="d-flex">
                            <span class="me-3">Email:</span><span class="text-white">isabellepalmdahl@hotmail.com</span>
                        </li>
                    </ul>
                </div>
                 <div class="col-md-3 mb-5">
                    <h4>
                        Quick links
                    </h4>
                    <ul class="list-unstyled footer-link">
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">Terms and conditions</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4>
                        Social media
                    </h4>
                    <ul class="list-unstyled footer-link d-flex footer-social">
                        <li>
                            <a href="#"><img class="fa" src="~/Images/facebook-3-32.png"/></a>
                        </li>
                        <li>
                            <a href="#"><img class="fa" src="~/Images/instagram-32.png"/> </a>
                        </li>
                        <li>
                            <a href="#"><img class="fa" src="~/Images/twitter-3-32.png"/></a>
                        </li>
                        <li>
                            <a href="#"><img class="fa" src="~/Images/youtube-32.png"/> </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4>
                        
                    </h4>
                    <ul class="list-unstyled footer-link d-flex">
                        <li>
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo2" alt="logo" src="~/Images/logo_icon_170795.png"/>YourCompany</a>
                        </li>
                    </ul>
                </div>

                <div class="row">
                    <div class="col-12 text-md-center">
                        <p>
                            &copy; 2022 - Isabelle Palmdahl
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/mobiscroll.jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
